dir="${HOME}/.local/share/bash-completion/completions"
mkdir -p "${dir}"
if find "${dir}" -mindepth 1 -maxdepth 1 | read; then
  for f in "${dir}"/*; do
    [[ -e "${f}" ]] && . "${f}"
  done
fi

if command -v fzf-share >/dev/null; then
  source "$(fzf-share)/key-bindings.bash"
  source "$(fzf-share)/completion.bash"
fi
